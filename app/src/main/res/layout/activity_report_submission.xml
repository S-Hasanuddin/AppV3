<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_submission"
            android:textSize="22sp"
            android:textColor="@color/primary_text_color"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Title Input -->
        <EditText
            android:id="@+id/etReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/report_title_hint"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:layout_marginBottom="12dp" />

        <!-- Description Input -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/report_description_hint"
            android:inputType="textMultiLine"
            android:minHeight="120dp"
            android:gravity="top|start"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:layout_marginBottom="12dp" />

        <!-- Location Button -->
        <Button
            android:id="@+id/btnGetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_location"
            android:backgroundTint="@color/button_background_color"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/ivImagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_preview"
            android:visibility="gone"
            android:background="@drawable/image_placeholder"
            android:layout_marginBottom="12dp" />

        <!-- Upload Image Button -->
        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            android:backgroundTint="@color/button_background_color"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <!-- Submit com.example.myapplication.Report Button -->
        <Button
            android:id="@+id/btnSubmitReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_report"
            android:backgroundTint="@color/accent_color"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
